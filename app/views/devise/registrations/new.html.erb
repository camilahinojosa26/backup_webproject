
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Custom fonts for this template-->
    <%= stylesheet_link_tag 'fontawesome-free/css/all.min.css' %>
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <%= stylesheet_link_tag 'sb-admin-2.min.css' %>

</head>

<body>
    
  <div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <div class="row">
          <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
            <div class="col-lg-7">
              <div class="p-5">
                <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Create an account!</h1>
                </div>
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>
                  <div class="form-group row">
                    <div class="col-sm-6 mb-3 mb-sm-0">
                      <%= f.label :name %><br/>
                      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control form-control-user" %>
                    </div>
                    <div class="col-sm-6 mb-3 mb-sm-0">
                      <%= f.label :last_name %><br/>
                      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class:"form-control form-control-user" %>
                    </div>
                  </div>

                  <div class="field" style = "margin-bottom: 20px;">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-user" %>
                  </div>

                  <div class="field" style = "margin-bottom: 20px;">
                    <%= f.label :telephone %><br />
                    <%= f.text_field :telephone, autofocus: true, autocomplete: "telephone", class: "form-control form-control-user" %>
                  </div>

                  <div class="form-group row">
                    <div class="col-sm-6 mb-3 mb-sm-0">
                      <%= f.label :password %>
                      <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                      <% end %><br />
                      <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-user" %>
                    </div>
                    <div class="col-sm-6">
                      <%= f.label :password_confirmation %><br />
                      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-user" %>
                    </div>
                  </div>

                  <div class="actions">
                    <%= f.submit "Sign up", class: "btn btn-primary btn-user btn-block" %>
                  </div>
                  
                  <hr style = "background-color: #d0d0d0;"></hr>

                  <div class="text-center">
                    <%= render "devise/shared/links" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

